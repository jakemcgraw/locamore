    <dd><?= $this->info->getMessage() ?></dd>

    <dt>Stack Trace:</dt>
    <dd><pre>
    <?= $this->info->getTraceAsString() ?>
    </pre></dd>
  </dl>
<? endif ?>
  </body>
</html>
