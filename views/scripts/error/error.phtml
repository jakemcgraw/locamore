<html>
  <head>
    <title><?= $this->message ?></title>
  </head>
  <body>
    <h2><?= $this->message ?></h2>
<? if (500 == $this->code): ?>

  <h4>Error details:</h4>
  <dl>
    <dt>Exception Code:</dt>
    <dd><?= $this->info->getCode() ?></dd>

